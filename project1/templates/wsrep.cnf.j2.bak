[client]
socket=/var/run/mysqld/mysqld.sock

[mysqld]
server-id={{ server_id }}
datadir=/var/lib/mysql
socket=/var/run/mysqld/mysqld.sock
log-error=/var/log/mysql/error.log
pid-file=/var/run/mysqld/mysqld.pid

pxc-encrypt-cluster-traffic=OFF
binlog_expire_logs_seconds=604800

######## wsrep ###############
wsrep_on=ON
wsrep_provider=/usr/lib/galera4/libgalera_smm.so
wsrep_cluster_name={{ wsrep_cluster_name }}
wsrep_cluster_address=gcomm://{{ groups['pxc_nodes'] | map('extract', hostvars, ['ansible_host']) | join(',') }}
wsrep_node_address={{ ansible_host | default(inventory_hostname) }}
wsrep_node_name=pxc-{{ (ansible_host | default(inventory_hostname)) | replace('.','-') }}
wsrep_sst_method=rsync

binlog_format=ROW
wsrep_slave_threads=8
wsrep_log_conflicts
innodb_autoinc_lock_mode=2
pxc_strict_mode=ENFORCING
default_storage_engine=InnoDB
innodb_flush_log_at_trx_commit=0
symbolic-links=0
default_authentication_plugin=mysql_native_password


